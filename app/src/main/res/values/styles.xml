<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextAppearanceActive">@style/LatoBlackTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/LataRegularTextAppearance</item>
        <item name="itemTextColor">@color/white</item>
    </style>


    <style name="TextAppearance.H1" parent="TextAppearance">
        <item name="android:textSize">@dimen/fontSize44</item>
        <item name="fontFamily">@font/lato_black</item>
    </style>


    <style name="LatoBlackTextAppearance">
        <item name="font">@font/lato_black</item>
    </style>

    <style name="LataRegularTextAppearance">
        <item name="font">@font/lato_regular</item>
    </style>

    <style name="TextAppearance.H2" parent="TextAppearance">
        <item name="android:textSize">@dimen/fontSize22</item>
        <item name="fontFamily">@font/lato_black</item>
    </style>


    <style name="ScrollComponent">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

</resources>
